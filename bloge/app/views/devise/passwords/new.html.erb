<div align=center>
<h2 style="color:#428bca">Forgot your password?</h2>
<table class="table-hover" width=300>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
   <tr> <td><%= f.label :email %></td>
   <td> <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %> </td></tr>
  </div>
</table>
  <div class="actions" style="margin:10px">
    <%= f.submit "Reset password instructions", class: "btn btn-info" %>
  </div>
<% end %>
<div style="margin: 10px">
<%= render "devise/shared/links" %>
</div>
</div>