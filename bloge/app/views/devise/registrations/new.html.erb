<h2 align="center" style="color:#428bca">Sign up</h2>
<div align="center">
 <table class="table-hover" cellpadding="10" max-width=350px>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
 
  <div class="form-group">
  <tr> <td> <%= f.label :email %><br /></th>
   <th> <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"  %> </th></tr>
  </div>
   
    <div >
 <tr> <td><%= f.label :username %><br /> </td>
  <td><%= f.text_field :username, autofocus: true, class: "form-control" %> </td> </tr>
  </div>
  
  <div class="form-group">
  <tr> <td> <%= f.label :password %> </td>
    
  <td>  <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %> </td> </tr>
  </div>

  <div class="form-group">
   <tr> <td> <%= f.label :password_confirmation %> </td>
   <td> <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control"%> </td></tr>
  </div>
 </table>

  <div class="actions" style="margin: 10px">

    <%=  f.submit "Sign up", class: "btn btn-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>